<h2>Edit thread</h2>
{{#has_errors}}
<p><strong>Uh oh</strong>. Your thread title has issues:</p>
<ul class="errors">
{{#errors}}
    <li>{{.}}</li>
{{/errors}}
</ul>
{{/has_errors}}
<form action="{{baseurl}}thread/edit/{{id}}" method="post">
    <input type="hidden" name="csrf" value="{{csrf}}" />
    <label for="title">Title</label>
    <input type="text" name="title" value="{{title}}" placeholder="Summarise your topic or question" />
    <p>Choose tags relevant to your thread to help discoverability:</p>
    <ul class="tags">
    {{#all_tags}}
        <li><label><input type="checkbox" name="tags[]" value="{{tag}}"{{#is_checked}} checked{{/is_checked}} /> {{tag}}</label></li>
    {{/all_tags}}
    </ul>
    <input type="submit" value="Edit" />
</form>
<form action="{{baseurl}}thread/delete/{{id}}" method="post">
    <input type="hidden" name="csrf" value="{{csrf}}" />
    <input type="submit" value="Delete" />
</form>
